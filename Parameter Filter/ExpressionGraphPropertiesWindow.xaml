<Window x:Class="Parameter_Filter.ExpressionGraphPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Expression Graph" Height="200" Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Expression of Specie" Margin="10,15,5,5" />
            <ComboBox ItemsSource="{Binding Species, Mode=OneWay}" SelectedIndex="{Binding SelectedSpecie, Mode=TwoWay}" Margin="5,10,10,10" />
        </StackPanel>
        <CheckBox IsChecked="{Binding GridVisible, Mode=TwoWay}" Margin="10,10,10,5">Show grid</CheckBox>
        <CheckBox IsChecked="{Binding HighlightMeasurements, Mode=TwoWay}" Margin="10,10,10,5">Highlight Measurements</CheckBox>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,25,15,20" Command="{Binding ExportCommand, Mode=OneTime}">Export</Button> 
    </StackPanel>
</Window>
